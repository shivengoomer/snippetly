{
  "manifest_version": 3,
  "name": "Snippetly",
  "version": "1.0",
  "description": "A clipboard manager for text and images.",
  "permissions": [
    "clipboardWrite",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}